<component type="desktop">
  <id>com.github.benpocalypse.Huely</id>
  <metadata_license>CC0</metadata_license>
  <project_license>GPL-3.0+</project_license>
  <content_rating type="oars-1.1" />
  <name>Huely</name>
  <summary>Color your space</summary>
  <description>
    <p>Control WiFi lights using this simple app.</p>
  </description>
  <developer_name>Ben Foote</developer_name>
  <launchable type="desktop-id">com.github.benpocalypse.Huely.desktop</launchable>

  <!-- <icon type="stock">com.github.benpocalypse.Huely</icon> -->

  <custom>
    <value key="x-appcenter-color-primary">#273445</value>
    <value key="x-appcenter-color-primary-text">#fafafa</value>

    <value key="Purism::form_factor">workstation</value>
    <value key="Purism::form_factor">mobile</value>
  </custom>

  <!-- Links. -->
  <url type="homepage">https://github.com/benpocalypse/Huely</url>
  <url type="bugtracker">https://github.com/benpocalypse/Huely/issues</url>
  <url type="help">https://github.com/benpocalypse/Huely#readme</url>

  <update_contact>ben.foote@gmail.com</update_contact>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/benpocalypse/Huely/main/screenshots/en/light-and-dark.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/benpocalypse/Huely/main/screenshots/en/light.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/benpocalypse/Huely/main/screenshots/en/dark.png</image>
    </screenshot>
  </screenshots>

  <releases>
    <release date="2022-10-20" version="0.4.1">
      <description>
        <ul>
          <li>
            Fixed a minor bug where the 'searching' display would add a new spinner every time the discover button is clicked.
          </li>
        </ul>
      </description>
    </release>
    <release date="2022-09-29" version="0.4.0">
      <description>
        <ul>
          <li>
            Added ability to long click/press a light in the list in order to delete it from Huely.
          </li>
          <li>
            Made a bunch of underlying changes to the gschema to make things more extensible - no user facing changes hopefully.
          </li>
        </ul>
      </description>
    </release>
    <release date="2022-03-25" version="0.3.0">
      <description>
        <ul>
          <li>
            New features:
          </li>
          <li>
            Brightness - Now each light has a controllable brightness level.
          </li>
          <li>
            Connection and Color - Now each light shows whether it is connected, and what the current color is.
          </li>
        </ul>
      </description>
    </release>
    <release date="2022-03-02" version="0.2.0">
      <description>
        <ul>
          <li>
            Initial release
          </li>
        </ul>
      </description>
    </release>
  </releases>

</component>
